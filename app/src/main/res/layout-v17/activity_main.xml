<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#47f7ee"
    tools:context="com.dreslab.www.drethans.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout">

        <ViewFlipper
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/viewFlipper"
            android:longClickable="false"
            android:textAlignment="center"
            android:flipInterval="@android:integer/config_mediumAnimTime">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/imageView"
                android:scaleType="centerCrop"
                android:src="@drawable/s6"
                />
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/imageView2"
                android:scaleType="centerCrop"
                android:src="@drawable/s2"
                />
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/imageView3"
                android:scaleType="centerCrop"
                android:src="@drawable/s3"/>
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/imageView4"
                android:scaleType="centerCrop"
                android:src="@drawable/s4"/>
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/imageView5"
                android:scaleType="centerCrop"
                android:src="@drawable/s5"/>
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/imageView6"
                android:scaleType="centerCrop"
                android:src="@drawable/s1"/>
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/imageView7"
                android:scaleType="centerCrop"
                android:src="@drawable/s7"/>
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/imageView8"
                android:scaleType="centerCrop"
                android:src="@drawable/s8"/>
        </ViewFlipper>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/student"
            android:text="Student"
            android:elevation="20dp"
            android:textColor="@android:color/white"
            android:textStyle="italic"
            android:background="@android:color/transparent"/>

    </RelativeLayout>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/intructor"
        android:text="@string/instructor"
        android:elevation="20dp"
        android:textColor="@android:color/white"
        android:textStyle="italic"
        android:background="@android:color/transparent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/linearLayout" />

</RelativeLayout>
